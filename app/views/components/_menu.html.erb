<%# locals: (items:) -%>

<% if false %>
<%= render "components/menu",
  items: [
    { label: "Profile", path: "/profile" },
    { label: "Settings", path: "/settings" }
  ]
%>
<% end %>

<nav class="w-full max-w-[240px] bg-[#FCFCFD] rounded-lg shadow-sm">
  <ul class="px-2 divide-y divide-gray-100">
    <% items.each do |item| %>
      <li>
        <%= link_to item[:path],
          class: "block py-2 text-base hover:bg-gray-50 transition-colors duration-200" do %>
          <%= item[:label] %>
        <% end %>
      </li>
    <% end %>
  </ul>
</nav>
